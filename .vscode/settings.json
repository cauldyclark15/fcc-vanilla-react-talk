{
  "workbench.colorTheme": "Cobalt2",
  "editor.fontFamily":
    "'Fira Code',Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.5,
  "files.trimTrailingWhitespace": true,
  "editor.fontWeight": "300",
  "prettier.eslintIntegration": true,
  // this isn't really underline-thin but we hack it to be a thicker cursor
  "editor.cursorStyle": "underline-thin",
  "editor.cursorBlinking": "solid",
  // Very important: Install this plugin: https://github.com/be5invis/vscode-custom-css
  // you'll need to change this to an absolute path on your computer
  "vscode_custom_css.imports": [
    "/Volumes/Macintosh HD/Users/cauldyclark15/.vscodestyles.css"
  ],
  "editor.renderWhitespace": "all",
  "files.associations": {
    "*.jsx": "javascriptreact",
    "*.js": "javascript",
    "**/components/*.js": "javascriptreact",
    "**/containers/*.js": "javascriptreact",
    "**/containers/wrapper/*.js": "javascriptreact",
    "**/components/**/*.js": "javascriptreact",
    "**/pages/**/*.js": "javascriptreact",
    "**/src/**/*.js": "javascriptreact"
  },
  "workbench.iconTheme": "vscode-icons",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestionsDelay": 10,
  "editor.wordBasedSuggestions": true,
  "editor.parameterHints": true,
  "editor.tabSize": 2,
  "prettier.tabWidth": 2,
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "window.zoomLevel": 0,
  "editor.wordWrap": "on",
  "emmet.triggerExpansionOnTab": true,
  "vsicons.dontShowNewVersionMessage": true,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "editor.formatOnSave": true,
  "prettier.printWidth": 80,
  "prettier.singleQuote": true
}
